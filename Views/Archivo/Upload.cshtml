@{
    ViewData["Title"] = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="container text-center p-5 bg-ight">
        <h2><strong>Cargar Archivo</strong></h2>
    </div>
    <div class="d-flex justify-content-center">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="files" class="control-label">Selecionar archivos</label>
                <input type="file" name="files" id="files"/>
                <button type="submit" class="btn btn-success"> Cargar archivos</button>
            </div>
        </form>
    </div>
</div>




